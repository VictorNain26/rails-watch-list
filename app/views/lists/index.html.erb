<div class="banner" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>My Movies Lists !</h1>
    <p id="banner-typed-lists"></p>
  </div>
</div>
<ul>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random)">
        <p class="lists" data-list="<%= list.name %>"><%= link_to list.name, list %></p>
      </div>
    <% end %>
  </div>
</ul>
