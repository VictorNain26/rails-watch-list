<div class="banner" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @list.name %> Movies</h1>
    <p id="banner-typed-movies"></p>
  </div>
</div>
<p class="bottom-book"><%= link_to 'Delete this List', @list, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<h3>New Bookmark</h3>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit %>
<% end %>
<div class="container-card">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <img src="https://source.unsplash.com/random" />
      <div class="card-trip-infos">
        <div>
          <h2 class="movie" data-title="<%= bookmark.movie.title %>" ><%= bookmark.movie.title %></h2>
          <P><%= bookmark.movie.overview %></P>
          <p><%= link_to 'delete this movie', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure ?' } %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
